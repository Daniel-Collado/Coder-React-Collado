{
    "version": 2,
    "functions": {
      "api/payment.js": {
        "runtime": "nodejs18.x",
        "regions": ["sa-east-1"]
      }
    },
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }